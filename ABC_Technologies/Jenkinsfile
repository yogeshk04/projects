pipeline {
    agent any

    stages {
        stage('Git checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: '9665c479-d29b-43b7-b413-58795572bf03', url: 'https://github.com/yogeshk04/projects.git']]])
            }
        }
        stage('Build') {
            steps {
                sh '''cd ABC_Technologies/
                    mvn clean package
                    mv target/*.war target/abctech.war
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''cd ABC_Technologies/
                    mvn test
                '''
            }
        }
    }
    
    post
    {
        always
        {
            emailext body: 'Pipeline summary', subject: 'ABC_Tech Pipleline status', to: 'yoarsde@gmail.com'
        }
    }
}
